<div class="w-100 w-50-l f4">
  <%= form_for @changeset, @action, fn f -> %>
    <%= if @changeset.action do %>
      <div class="alert alert-danger f5">
        Oops, something went wrong! Please check the errors below.
      </div>
    <% end %>

    <div>
      <div class="f5 b db mb2">
        <%= label f, :type %>
      </div>
      <div>
        <%= text_input f, :type, class: "input-reset ba b--green pa2 mb2 db w-100 w-50-ns" %>
      </div>
      <div class="mt1 f6">
        <%= error_tag f, :type %>
      </div>
    </div>

    <div class="mt4">
      <div class="f5 b db mb2">
        <%= label f, :price %>
      </div>
      <div>
        <%= number_input f, :price, step: "any", class: "input-reset ba b--green pa2 mb2 db w-100 w-50-ns" %>
      </div>
      <div class="mt2 f6">
        <%= error_tag f, :price %>
      </div>
    </div>

    <div class="mt4">
      <div class="f5 b db mb2">
        <%= label f, :entry %>
      </div>
      <div>
        <%= textarea f, :entry, rows: 10, class: "input-reset ba b--green pa2 mb2 db w-100" %>
      </div>
      <div class="mt2 f6">
        <%= error_tag f, :entry %>
      </div>
    </div>

    <div class="mt4">
      <%= submit "Save", class: "f5 link dim br2 ph3 pv2 mb2 dib ba b--green bg-white pointer" %>
    </div>
  <% end %>
</div>
